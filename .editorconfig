root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 4

eclint_indent_style = unset

[Dockerfile]
indent_size = 4

[*.proto]
indent_size = 2
tab_width = 2

[{*.go,*.go2}]
indent_style = tab

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
indent_size = 4

[*.php]
indent_style = tab
indent_size = 4